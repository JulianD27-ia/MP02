---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
import LogoSvg from '../icons/Craneo.svg';
---


<footer class="fixed bottom-0 left-0 w-full bg-gray-900 mx-auto max-w-[1392px] px-4 py-3 shadow-lg">
  <div class="flex justify-between items-center">
    <div class="flex flex-row gap-x-3 items-center">
      <LogoSvg class="w-12 h-12" />
      <div>
        <p class="font-semibold text-2xl flex flex-row gap-x-2 text-white">
          <span class="rounded bg-red-600 text-2xl px-2">
            {new Date().getFullYear()}
          </span>
        </p>
        <span class="uppercase font-light text-gray-300">
          <a
            href="https://github.com/withastro/astro"
            target="_blank"
            rel="noopener noreferrer"
          >
            Julian
          </a>
        </span>
      </div>
    </div>
    <div>
      <h5 class="text-center text-white flex justify-center items-center text-xl font-bold uppercase">
        ING_SOFT
      </h5>
    </div>
  </div>
</footer>
