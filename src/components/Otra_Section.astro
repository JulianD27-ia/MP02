<style is:global>
  /* Estilos globales con temática Matrix */
  :root {
    --matrix-green: #00ff41;
    --matrix-dark: #000000;
    --matrix-gray: #0d0208;
    --matrix-light: #003b00;
  }
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  body {
    background-color: var(--matrix-dark);
    color: var(--matrix-green);
    font-family: 'Courier New', monospace;
    line-height: 1.6;
    overflow-x: hidden;
    position: relative;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    position: relative;
    z-index: 10;
  }
  
  .header {
    display: flex;
    align-items: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--matrix-green);
  }
  
  .profile-image {
    margin-right: 2rem;
  }
  
  .profile-image img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    border: 2px solid var(--matrix-green);
    object-fit: cover;
  }
  
  .matrix-text {
    color: var(--matrix-green);
    text-shadow: 0 0 5px var(--matrix-green);
    margin-bottom: 0.5rem;
  }
  
  .matrix-subtitle {
    color: var(--matrix-green);
    margin-bottom: 0.5rem;
  }
  
  .matrix-label {
    font-weight: bold;
    color: var(--matrix-green);
  }
  
  .matrix-link {
    color: var(--matrix-green);
    text-decoration: none;
    transition: text-shadow 0.3s;
  }
  
  .matrix-link:hover {
    text-shadow: 0 0 5px var(--matrix-green);
  }
  
  .section {
    margin-bottom: 3rem;
  }
  
  .section-title {
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--matrix-green);
  }
  
  .contact-info p {
    margin-bottom: 0.5rem;
  }
  
  .social-links {
    margin-top: 1rem;
  }
  
  .social-links a {
    margin-right: 1rem;
  }
  
  .experience-item, .education-item {
    margin-bottom: 2rem;
    padding: 1rem;
    background-color: rgba(13, 2, 8, 0.7);
    border: 1px solid var(--matrix-light);
    border-radius: 5px;
  }
  
  .date {
    color: #008f11;
    font-style: italic;
    margin-bottom: 0.5rem;
  }
  
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }
  
  .skill-category {
    padding: 1rem;
    background-color: rgba(13, 2, 8, 0.7);
    border: 1px solid var(--matrix-light);
    border-radius: 5px;
  }
  
  .skill-category ul {
    list-style-type: none;
  }
  
  .skill-category li {
    padding: 0.3rem 0;
    border-bottom: 1px dotted var(--matrix-light);
  }
  
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }
  
  .project-card {
    padding: 1.5rem;
    background-color: rgba(13, 2, 8, 0.7);
    border: 1px solid var(--matrix-light);
    border-radius: 5px;
    transition: transform 0.3s, box-shadow 0.3s;
  }
  
  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 255, 65, 0.2);
  }
  
  .project-card h3 {
    margin-bottom: 1rem;
  }
  
  .project-card ul {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }
  
  .project-card a {
    display: inline-block;
    margin-right: 1rem;
    margin-top: 1rem;
  }
  
  .awards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }
  
  .award-item {
    padding: 1rem;
    background-color: rgba(13, 2, 8, 0.7);
    border: 1px solid var(--matrix-light);
    border-radius: 5px;
  }
  
  .languages p {
    margin-bottom: 0.5rem;
  }
  
  @media (max-width: 768px) {
    .header {
      flex-direction: column;
      text-align: center;
    }
    
    .profile-image {
      margin-right: 0;
      margin-bottom: 1.5rem;
    }
    
    .container {
      padding: 1rem;
    }
  }
</style>