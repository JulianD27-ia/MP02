import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
		:root{
		color-scheme: light dark;
	}
	

	@font-face {
		font-family: "Modern";
		font-style: normal;
		font-weight: 100 1000;
		font-display: swap;
		src: url("/font/Modern.woff2") format("woff2")
	}

	@font-face {
		font-family: "Urban";
		font-style: normal;
		font-weight: 100 1000;
		font-display: swap;
		src: url("/font/Urban.woff") format("woff")
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: Modern ,system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	}
</style>
